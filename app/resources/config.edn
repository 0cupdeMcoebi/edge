              :services {:edge {:ami "ami-785db401"
                                :instance-type "m3.medium"
                                :key-name "edge-demo"
                                :instance-count 2
                                :port ^:ref [:web-server :port]
                                :launch-config {:template :java8
                                                :args {:jvm-opts ["-Xmx4g"]}}}}

              :asgs [{:service :edge
                      :release-artifact :roll.core/latest-release-artifact
                      :load-balancer :edge}]}

